{% extends 'base.html.twig' %}

{% block title %}Hello LectureController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    This friendly message is coming from:

    <form action="{{path('lecture_store')}}" method="POST">
        <ul>
            <label>Lecture name:</label>
            <input type="text" name="lecture_name">
            <label>Lecture description:</label>
            <input type="text" name="lecture_description">

            <button type="submit">Add new Lecture</button>
        </ul>
    </form>
</div>
{% endblock %}
