{% extends 'base.html.twig' %}

{% block title %}Hello GradeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    This friendly message is coming from:
    <form action="{{path('grade_store')}}" method="POST">
        <select name="grade_student_id">
            <option value="0">Select student</option>
        
            {% for students in student %}
            <option value="{{students.id}}">{{students.name}} {{students.surname}}</option>
            {% endfor %}

        </select>

        <select name="grade_lecture_id">
            <option value="0">Select lecture</option>
            
            {% for lectures in lecture %}
            <option value="{{lectures.id}}">{{lectures.name}} {{lectures.description}}</option>
            {% endfor %}

        </select>
        <label>Student grade:</label>
        <input type="text" name="grade_grade">
        <button>Save Grade!</button>
    </form>
</div>
{% endblock %}