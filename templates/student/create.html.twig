{% extends 'base.html.twig' %}

{% block title %}Add student{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
               <div class="card-header">Add new student</div>

                <div class="card-body">
                    <div class="example-wrapper">
                        <form action="{{path('student_store')}}" method="POST">
                            <div class="form-group">
                                <label>Studen name:</label>
                                <input type="text" class="form-control" name="student_name">
                            </div>

                            <div class="form-group">
                                <label>Student surname:</label>
                                <input type="text" class="form-control" name="student_surname">
                            </div>

                            <div class="form-group">
                                <label>Student email:</label>
                                <input type="text" class="form-control" name="student_email">
                            </div>

                            <div class="form-group">
                                <label>Strudent phone:</label>
                                <input type="text" class="form-control" name="student_phone">
                            </div>
                            <input type="hidden" name="token" value="{{csrf_token('')}}"/>
                            <button type="submit" class="btn btn-dark">Add new Student</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
